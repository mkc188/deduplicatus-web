<!DOCTYPE html>
<html lang="en">
    <head>
        {{>header}}
        <!-- CSS Stylesheet -->
        <link rel="stylesheet" href="css/signin.css">
    </head>
    <body>
        <div class="container">
            <h1>DeDuplicatus <small>A Deduplication-Enabled Multi-Cloud App</small></h1>

            <div class="jumbotron">
                {{^valid-user}}
                <div class="row">
                    <div class="col-md-4">
                        Some image here
                    </div>
                    <div class="col-md-4">
                        <h2>New User</h2>
                        <form class="form-register" role="form">
                            <div class="alert alert-danger" role="alert" id="register-failed">
                                <span class="glyphicon glyphicon-exclamation-sign"></span>
                                <span id="register-error-msg"></span>
                            </div>
                            <div class="alert alert-success" role="alert" id="register-success">
                                <span class="glyphicon glyphicon-ok"></span> Account created.
                            </div>
                            <div id="form-register-inputs">
                                <div class="form-group register-form-group">
                                    <input id="register-username" type="text" class="form-control" placeholder="Username" autocapitalize="off" autocorrect="off">
                                </div>
                                <div class="form-group register-form-group">
                                    <input id="register-email" type="email" class="form-control" placeholder="Email" autocapitalize="off" autocorrect="off">
                                </div>
                                <div class="form-group register-form-group">
                                    <input id="register-password" type="password" class="form-control" placeholder="Password">
                                </div>
                                <div class="form-group register-form-group">
                                    <input id="register-password2" type="password" class="form-control" placeholder="Re-type Password">
                                </div>
                            </div>
                            <div class="pull-right">
                                <button id="register-btn" class="btn btn-lg btn-warning" type="button">Register</button>
                                <button id="register-continue" class="btn btn-lg btn-success" type="button">Continue</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-4">
                        <h2>Returning User</h2>
                        <form class="form-signin" role="form">
                            <div class="alert alert-danger" role="alert" id="signin-failed">
                                <span class="glyphicon glyphicon-exclamation-sign"></span>
                                <span id="signin-error-msg"></span>
                            </div>
                            <div id="form-signin-inputs">
                                <input id="signin-username" type="text" class="form-control" placeholder="Username" autocapitalize="off" autocorrect="off" autofocus>
                                <input id="signin-password" type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="pull-right">
                                <button id="signin-btn" class="btn btn-lg btn-info" type="button">Sign in</button>
                            </div>
                        </form>
                    </div>
                </div>
                {{/valid-user}}
                {{#valid-user}}
                <div class="row">
                    <div class="col-md-8">
                        Some image here
                    </div>
                    <div class="col-md-4">
                        <h2>Welcome back, {{name}}.</h2>
                        <div class="alert alert-success" role="alert">
                            <span class="glyphicon glyphicon-ok"></span> Access gained.
                        </div>
                        <div class="pull-right">
                            <button id="signin-skip-btn" class="btn btn-lg btn-success" type="button">Continue</button>
                        </div>
                    </div>
                </div>
                {{/valid-user}}
            </div>
        </div>

        <script type="text/javascript" src="js/lib/cryptojs-aes.js"></script>
        <script type="text/javascript">
            var session_aes_key = '{{aes-key}}';
        </script>
        <script type="text/javascript" src="js/ui.signin.js"></script>
    </body>
</html>