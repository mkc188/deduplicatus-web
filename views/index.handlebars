<div class="container">
    <div class="">
        <div class="row">
            {{#if enableFileManager}}
            <div class="col-md-6">
                <h4>File Manager Mode</h4>
                <!-- image size: width 390px and 500px -->
                <div style="height:400px; background-color:green;">image here</div>
            </div>

            <div class="col-md-6">
                <h4>Deduplication-enabled Mode</h4>
                <!-- image size: width 390px and 500px -->
                <div style="height:400px; background-color:green;">image here</div>
            </div>
            {{else}}
            <div class="col-md-10 col-md-push-1">
                <!-- image size: width 390px and 500px -->
